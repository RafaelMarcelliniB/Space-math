{
  "name": "space-math",
  "version": "1.0.0",
  "description": "Space Math - Juego educativo de matem√°ticas",
  "main": "main.js",
  "author": "Rafael Marcellini",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:windows": "electron-builder --win",
    "build:all": "electron-builder -mwl"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "27.0.0",
    "electron-builder": "24.6.4"
  },
  "build": {
    "appId": "com.spaceMath.app",
    "productName": "Space Math",
    "files": [
      "main.js",
      "space-math.html",
      "menu.html",
      "styles.css",
      "nav.css",
      "icon.png",
      "githubinverseicon.jpg",
      "youtubeinverseicon.jpg"
    ],
    "directories": {
      "buildResources": "."
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Education"
    }
  }
}
